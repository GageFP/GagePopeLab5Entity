@model GagePopeLab5.Models.Character

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/site.css" type="text/css" />
<h1>Details</h1>

<div>
    <h4>Character</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.characterName)
        </dd>
        <dt class="col-sm-2">
            Health
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.characterHealth)
        </dd>
        <dt class="col-sm-2">
            Weapon
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weapon.weaponName)
        </dd>
        <dt class="col-sm-2">
            Weapon Damage
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weapon.weaponDamage)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.characterID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
